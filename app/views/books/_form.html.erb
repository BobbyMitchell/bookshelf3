<%= form_for @book do |f| %>

<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<%= f.label :title, "Enter title" %>
<%= f.text_field :title %>
<%= f.label :author, "Enter author" %>
<%= f.text_field :author %>
<%= f.submit %>
<% end %>
